div.cart
  .cart-btn(ng-click="popup()")
    span.badge {{number || 0}}
    i.icon.ion-android-cart

  section.cart-list
    .cart-list-title
       .left 购物车
       .right
          i.icon.ion-trash-a 清除全部
    .cart-item(ng-repeat="item in cartItem")
      .row
        .col-40 {{item.name}}
        .col-30.pri {{item.price | currency : '￥'}}
        .col-30
          number-pick(number="item.number")