div.chatList
    div#search-bar
        div.item-input-inset
            label.item-input-wrapper
                i.icon.ion-search.placeholder-icon
                input(type="search" placeholder="搜索" name="" ng-model="searchTxt" autocorrect="off")
    ion-content.has-footer.has-header
        nodata(ng-if='!vm.chatList || vm.chatList.length==0')
        ion-list
            ion-item.item.item-remove-animate.item.item-avatar(type='item-text-wrap' ng-click='vm.goChat(chat.id)' ng-repeat='chat in vm.chatList | filter:searchTxt track by $index')
                img(ng-src='{{vm.headHost+chat.headIcon}}')
                h2 {{chat.nickname}}
                    em(ng-bind='chat.chatTime*1000 | date:"MM-dd H:mm"')
                p(ng-bind='chat.content')
                ion-option-button.button-active(ng-click='vm.deleteChat(chat.id)') 删除

